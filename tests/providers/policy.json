{
    "meta": {
        "version": "1.0.0-alpha.1",
        "required_provider": "infracost"
    },
    "evaluators": [
        {
            "id": "cost_check_1",
            "provider_args": {
                "resource_type": [
                    "aws_s3_bucket"
                ],
                "costType" : "totalMonthlyCost"
            },
            "condition": {
                "type": "Equals",
                "expected": 100
            }
        },
        {
            "id": "cost_check_2",
            "provider_args": {
                "resource_type": [
                    "aws_s3_bucket"
                ],
                "costType" : "totalHourlyCost"
            },
            "condition": {
                "type": "LessThanEqualTo",
                "expected": 100
            }
        }
    ],
    "eval_expression": "cost_check_1 && cost_check_2"
}